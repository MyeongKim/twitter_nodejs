doctype html
html
	head
		title 트위터
		link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css")
		link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css")
		link(rel='stylesheet', href='/stylesheets/style.css')
		script(src="//code.jquery.com/jquery-1.11.2.min.js").
		script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js")
		script(type='text/javascript').
			$(document).ready(function(){
				$('#shareButton').click( function(e){
					e.preventDefault();
					$.ajax({
						crossDomain: true,
						//- contentType: "application/javascript;charset=utf-8",
						//- dataType: 'jsonp',
						type : 'get',
						url : 'https://www.facebook.com/dialog/feed',
						data : {
							app_id : 1413723592281387,
							display : 'page',
							link : 'https://developers.facebook.com/docs/sharing/reference/feed-dialog/v2.0',
							redirect_uri: 'http://localhost:3000/login',
							callback : '?'
						},
						success : function(data){
							alert(data);
						}
					});
				});
			});
		block script.
	body
		#wrapper
			#nav_bar
				nav.navbar.navbar-default
					.navbar-header
						a.navbar-brand(href='#') Twitter with node.js
						div
							ul.nav.navbar-nav
								li
									a(href='/') 홈 
								li
									a(href="/i/notifications") 알림 
								li
									a(href="/") 쪽지 
								li
									a(href="/i/discover") 발견하기
								li
									a(href="/logout") 로그아웃 



			#left_div
				.thumbnail
						.caption
							h3
								a(href="/#{user.id}") #{user.name}
							p @#{user.id}
							p tweets #{user.tweet_number} following #{user.following_number} follower #{user.follower_number}
								block left

				
				
			#right_div
				block right
				#tweetBox
					-for(var p in tweet)
						.panel.panel-default
							.panel-heading
								a(href="/#{tweet[p].id}") #{tweet[p].name}
							.panel-body
								p #{tweet[p].body}
								p #{tweet[p].date}
								#shareButton
									a(href="/#") 공유하기
				
				
