extends layout

block script
	script(type='text/javascript').
		$(document).ready(function(){
			// post new tweet
			$('button').click( function(e){
				e.preventDefault();
				$.post("/", {tweet : $('input.form-control').val() }, function(){
					var text = $('input.form-control').val();
					var date = new Date();
					var output = "";
					output += "<div class='panel panel-default'>";
					output += "<div class='panel-heading'>";
					output += "<a href='/#{user.id}'>#{user.name}</a></div>";
					output += "<div class='panel-body'>";
					output += "<p>" + text + "</p>";
					output += "<p>"+ date + "</p></div></div>";
					$(output).prependTo($('#tweetBox'));
					$("input.form-control").val('');
					});
			});
		});
block left

block right
	#tweetDiv
		form
			.form-group
				input.form-control(type='text', placeholder='무슨 일이 일어나고 있나요?')
				button.btn.btn-default(type='submit') tweet